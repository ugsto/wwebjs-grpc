{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"xo",
		"plugin:vitest/recommended",
		"prettier"
	],
	"overrides": [
		{
			"extends": [
				"xo-typescript",
				"plugin:vitest/recommended",
				"prettier"
			],
			"files": [
				"*.ts",
				"*.tsx"
			]
		},
		{
			"parserOptions": {
				"project": "tsconfig.scripts.json"
			},
			"files": [
				"scripts/*.ts"
			]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {}
}
